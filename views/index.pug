extends layouts/main.pug 
block content
  div(class="row")
    div(class="col-6")
      form(id="messagesForm")
        div(class="mb-3")
          label(for="email" class="form-label") Correo electr√≥nico 
          input(type="email" name="email" class="form-control")
        div(class="mb-3")
          label(for="name" class="form-label") Nombre
          input(type="text" name="name" class="form-control")
        div(class="mb-3")
          label(for="lastname" class="form-label") Apellido
          input(type="text" name="lastname" class="form-control")
        div(class="mb-3")
          label(for="age" class="form-label") Edad
          input(type="number" name="age" class="form-control")
        div(class="mb-3")
          label(for="alias" class="form-label") Alias
          input(type="text" name="alias" class="form-control")
        div(class="mb-3")
          label(for="avatar" class="form-label") Avatar
          input(type="text" name="avatar" class="form-control")
        div(class="mb-3")
          label(for="text" class="form-label") Mensaje
          input(type="text" name="text" class="form-control")

        button(type="submit" class="btn btn-primary") Enviar

    div(class="col-6")
      h1(id="compressionTitle")
      div(id="messagesContainer")

block scripts
  script(src="https://cdn.jsdelivr.net/npm/normalizr@3.6.2/dist/normalizr.browser.min.js") 
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js")
  script(src="/js/app.js")